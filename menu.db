# AIOSメニュー設定データベース

[openwrt-config]
magenta MENU_INTERNET selector internet-config
blue MENU_SYSTEM selector system-config
cyan MENU_PACKAGES selector package-config
green MENU_ADBLOCKER download "adblocker-dns.sh" "chmod" "load"
yellow MENU_ACCESSPOINT download "accesspoint-setup.sh" "chmod" "load"
red MENU_OTHERS download "other-utilities.sh" "chmod" "load"
white MENU_EXIT menu_exit
white_black MENU_REMOVE remove_exit

[internet-config]
magenta MENU_MAPE selector internet-mape
blue MENU_DSLITE selector internet-dslite
green MENU_PPPOE selector internet-pppoe
cyan MENU_DHCP selector internet-dhcp
white MENU_EXIT menu_exit
white_black MENU_RETURN return_menu

[system-config]
magenta MENU_HOSTNAME selector system-hostname
blue MENU_PASSWORD selector system-password
green MENU_WIFI selector system-wifi
cyan MENU_TIMEZONE selector system-timezone
yellow MENU_LED selector system-led
red MENU_REBOOT selector system-reboot
white MENU_EXIT menu_exit
white_black MENU_RETURN return_menu

[package-config]
magenta MENU_AUTO_INSTALL selector package-auto
blue MENU_MANUAL_SELECT selector package-manual
green MENU_UPDATE selector package-update
cyan MENU_CUSTOM selector package-custom
white MENU_EXIT menu_exit
white_black MENU_RETURN return_menu

