# AIOSメニュー設定データベース

[MAIN_MENU_NAME]
MENU_INTERNET selector MENU_INTERNET
MENU_SYSTEM selector MENU_SYSTEM
MENU_PACKAGES selector MENU_PACKAGES
MENU_ADBLOCKER download "adblocker-dns.sh" "chmod" "load"
MENU_ACCESSPOINT download "accesspoint-setup.sh" "chmod" "load"
MENU_OTHERS download "other-utilities.sh" "chmod" "load"

[MENU_INTERNET]
MENU_V&MIG selector MENU_V&MIG
MENU_MAPE selector MENU_MAPE
MENU_DSLITE selector MENU_DSLITE
MENU_PPPOE selector MENU_PPPOE

[MENU_SYSTEM]
MENU_HOSTNAME selector system-hostname
MENU_PASSWORD selector system-password
MENU_WIFI selector system-wifi
MENU_TIMEZONE selector system-timezone
MENU_LED selector system-led
MENU_REBOOT selector system-reboot

[MENU_PACKAGES]
MENU_PACKAGES_AUTO_INSTALL selector MENU_PACKAGES_AUTO_INSTALL
MENU_PACKAGES_MANUAL_INSTALL download "package-manual.sh" "chmod" "load"; package_manual_main
MENU_PACKAGES_SAMBA download "package-manual.sh" "chmod" "load"; package_samba
MENU_PACKAGES_LIST download "package-manual.sh" "chmod" "load"; package_list

# インターネット設定のサブセクション
[MENU_V&MIG]
MENU_V&MIG_CONFIG download "v6mig-prov.sh" "chmod" "load"

[MENU_MAPE]
MENU_MAPE_CONFIG download "map-e.sh" "chmod" "load"

[MENU_DSLITE]
MENU_DSLITE_CONFIG download "internet-dslite.sh" "chmod" "load"

[MENU_PPPOE]
MENU_PPPOE_CONFIG download "internet-pppoe.sh" "chmod" "load"

# システム設定のサブセクション
[system-hostname]
MENU_HOSTNAME_CONFIG download "system-hostname.sh" "chmod" "load"

[system-password]
MENU_PASSWORD_CONFIG download "system-password.sh" "chmod" "load"

[system-wifi]
MENU_WIFI_CONFIG download "system-wifi.sh" "chmod" "load"

[system-timezone]
MENU_TIMEZONE_CONFIG download "system-timezone.sh" "chmod" "load"

[system-led]
MENU_LED_CONFIG download "system-led.sh" "chmod" "load"

[system-reboot]
MENU_REBOOT_CONFIG download "system-reboot.sh" "chmod" "load"

[MENU_PACKAGES_AUTO_INSTALL]
MENU_PACKAGE_STANDARD menu_yn download "package-auto.sh" "chmod" "load"; detect_and_run_installer standard
MENU_PACKAGE_MINIMAL menu_yn download "package-auto.sh" "chmod" "load"; detect_and_run_installer minimal
MENU_PACKAGE_FULL menu_yn download "package-auto.sh" "chmod" "load"; detect_and_run_installer full
