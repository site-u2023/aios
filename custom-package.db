{
  "uconv": {
    "description": "Unicode conversion tool for OpenWrt",
    "source": "https://github.com/example/uconv",
    "version": "latest",
    "arch": ["mips", "arm", "x86_64"],
    "dependencies": ["libiconv", "libintl", "zlib"],
    "install": {
      "method": "opkg",
      "url": "https://github.com/example/uconv/releases/latest/download/uconv_{arch}.ipk"
    },
    "build": {
      "dependencies": ["make", "gcc", "git", "libtool", "automake", "pkg-config", "zlib-dev", "libssl-dev", "libicu-dev", "ncurses-dev"],
      "commands": [
        "./configure --prefix=/usr",
        "make -j$(nproc)",
        "make install"
      ]
    }
  }
}
