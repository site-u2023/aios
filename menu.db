# AIOSメニュー設定データベース

[MAIN_MENU_NAME]
MENU_INTERNET selector MENU_INTERNET
MENU_SYSTEM selector MENU_SYSTEM
MENU_PACKAGES selector MENU_PACKAGES
MENU_ADBLOCKER download "adblocker-dns.sh" "chmod" "load"
MENU_ACCESSPOINT download "accesspoint-setup.sh" "chmod" "load"
MENU_OTHERS download "other-utilities.sh" "chmod" "load"

[MENU_INTERNET]
MENU_INTERNET_PPPOE selector MENU_INTERNET_PPPOE
MENU_INTERNET_MAPE selector MENU_INTERNET_MAPE
MENU_INTERNET_NURO_MAPE selector MENU_INTERNET_NURO_MAPE
MENU_INTERNET_DSLITE selector MENU_INTERNET_DSLITE

[MENU_INTERNET_PPPOE]
MENU_INTERNET_PPPOE download "internet-pppoe.sh" "chmod" "load"

[MENU_INTERNET_MAPE]
MENU_INTERNET_MAPE download "internet-map-e.sh" "chmod" "load"
MENU_INTERNET_NURO_MAPE download "internet-map-e-nuro.sh" "chmod" "load"
MENU_INTERNET_MAPE_BASH_CONFIG download "map-e-bash.sh" "chmod" "load" "bash"

[MENU_INTERNET_DSLITE]
MENU_DSLITE_AUTO download "ds-lite-config.sh" "chmod"; auto_detect_and_apply # Run auto-detection function
MENU_DSLITE_MANUAL selector MENU_INTERNET_DSLITE_MANUAL # Go to manual ISP selection
MENU_DSLITE_RESTORE download "ds-lite-config.sh" "chmod"; restore_dslite_settings # Run restore function

[MENU_INTERNET_DSLITE_MANUAL]
MENU_DSLITE_TRANS selector MENU_DSLITE_TRANS_MANUAL # Select Transix East/West
MENU_DSLITE_XPASS download "ds-lite-config.sh" "chmod"; apply_dslite_settings "$AFTR_XPASS" "Cross Pass"
MENU_DSLITE_V6CONNECT download "ds-lite-config.sh" "chmod"; apply_dslite_settings "$AFTR_V6CONNECT" "v6 connect"

 [MENU_DSLITE_TRANS_MANUAL]
 MENU_DSLITE_TRANS_EAST download "ds-lite-config.sh" "chmod"; apply_dslite_settings "$AFTR_TRANS_EAST" "Transix (East Japan)" # Apply Transix East
 MENU_DSLITE_TRANS_WEST download "ds-lite-config.sh" "chmod"; apply_dslite_settings "$AFTR_TRANS_WEST" "Transix (West Japan)" # Apply Transix West

[MENU_SYSTEM]
MENU_HOSTNAME selector system-hostname
MENU_PASSWORD selector system-password
MENU_WIFI selector system-wifi
MENU_TIMEZONE selector system-timezone
MENU_LED selector system-led
MENU_REBOOT selector system-reboot

[MENU_PACKAGES]
MENU_PACKAGES_AUTO_INSTALL selector MENU_PACKAGES_AUTO_INSTALL
MENU_PACKAGES_MANUAL_INSTALL download "package-manual.sh" "chmod" "load"; package_manual_main
MENU_PACKAGES_SAMBA download "package-manual.sh" "chmod" "load"; package_samba
MENU_PACKAGES_LIST download "package-manual.sh" "chmod" "load"; package_list

[MENU_PACKAGES_AUTO_INSTALL]
MENU_PACKAGE_STANDARD download "package-auto.sh" "chmod" "load"; detect_and_run_installer standard
MENU_PACKAGE_MINIMAL download "package-auto.sh" "chmod" "load"; detect_and_run_installer minimal
MENU_PACKAGE_FULL download "package-auto.sh" "chmod" "load"; detect_and_run_installer full
