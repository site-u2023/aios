#!/bin/sh

SCRIPT_VERSION="2025.03.11-00-13"

echo -e "\033[1;35mCurrent Version: aios - Version: $SCRIPT_VERSION\033[0m"

# =========================================================
# üìå OpenWrt / Alpine Linux POSIX-Compliant Shell Script
# üöÄ Last Update: 2025-02-21
